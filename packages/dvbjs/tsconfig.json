{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": ["mocha", "node"]
  },
  "include": ["src", "test"]
}
